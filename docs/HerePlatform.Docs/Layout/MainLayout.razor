@inherits LayoutComponentBase
@inject IDocContentService ContentService
@inject NavigationManager Navigation

<div class="docs-layout">
    <header class="docs-header navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="">
                <img src="img/here-platform.svg" alt="" width="28" height="28" class="me-2" />
                <strong>HerePlatform.NET</strong> <span class="text-white-50 ms-1">Docs</span>
            </a>
            <button class="btn btn-outline-secondary btn-sm d-none d-lg-inline-flex align-items-center ms-auto me-3"
                    @onclick="OpenSearch">
                <span class="me-2">Search...</span>
                <kbd>Ctrl+K</kbd>
            </button>
            <div class="d-none d-lg-flex ms-3">
                <ApiKeyInput />
            </div>
            <button class="navbar-toggler" type="button" @onclick="ToggleSidebar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </header>

    <div class="docs-body">
        <nav class="docs-sidebar @(_sidebarOpen ? "open" : "")">
            <DocNavMenu OnNavigate="CloseSidebar" />
        </nav>

        <main class="docs-main">
            @Body
        </main>
    </div>
</div>

<SearchDialog @ref="_searchDialog" />

@code {
    private SearchDialog? _searchDialog;
    private bool _sidebarOpen;

    private void ToggleSidebar() => _sidebarOpen = !_sidebarOpen;
    private void CloseSidebar() => _sidebarOpen = false;
    private void OpenSearch() => _searchDialog?.Open();

    protected override async Task OnInitializedAsync()
    {
        await ContentService.InitializeAsync();
    }
}
