@page "/"

<PageTitle>HerePlatform.NET Docs</PageTitle>

<HeadContent>
    <meta name="description" content="Blazor components and services for the HERE Maps JavaScript API. Build interactive maps with declarative Razor syntax." />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="HerePlatform.NET Docs" />
    <meta property="og:description" content="Blazor components and services for the HERE Maps JavaScript API. Build interactive maps with declarative Razor syntax." />
    <meta property="og:site_name" content="HerePlatform.NET Docs" />
</HeadContent>

<div class="landing-page py-5">
    <div class="text-center mb-5">
        <img src="img/blazor-here-platform.svg" alt="HerePlatform.NET" width="96" height="96" class="mb-3" />
        <h1 class="display-4 fw-bold">HerePlatform.NET</h1>
        <p class="lead text-muted">
            Blazor components and services for the HERE Maps JavaScript API.
            Build interactive maps with declarative Razor syntax.
        </p>
        <div class="mt-4">
            <a href="docs/getting-started/installation" class="btn btn-primary btn-lg me-2">Get Started</a>
            <a href="https://github.com/emuuu/HerePlatform.NET" class="btn btn-outline-secondary btn-lg"
               target="_blank" rel="noopener">GitHub</a>
        </div>
    </div>

    <div class="row g-4 mt-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Getting Started</h5>
                    <p class="card-text text-muted">
                        Installation, quick start, configuration, and Blazor Server setup --
                        everything to get your first map running.
                    </p>
                    <a href="docs/getting-started/installation" class="btn btn-sm btn-outline-primary">Get Started</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">20+ Components</h5>
                    <p class="card-text text-muted">
                        Maps, markers, polylines, polygons, circles, info bubbles, clustering, heatmaps,
                        GeoJSON, KML, and more -- all as declarative Blazor components.
                    </p>
                    <a href="docs/components/here-map" class="btn btn-sm btn-outline-primary">Browse Components</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Blazor Service Wrappers</h5>
                    <p class="card-text text-muted">
                        Routing, geocoding, traffic, transit, places, isolines, matrix routing,
                        waypoint sequencing, and geofencing -- ready to use via DI.
                    </p>
                    <a href="docs/services/routing" class="btn btn-sm btn-outline-primary">Browse Services</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Utilities</h5>
                    <p class="card-text text-muted">
                        WKT parsing, GeoJSON export, flexible polyline codec,
                        and autosuggest search -- everything you need for geospatial apps.
                    </p>
                    <a href="docs/utilities/wkt-parser" class="btn btn-sm btn-outline-primary">Browse Utilities</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Guides</h5>
                    <p class="card-text text-muted">
                        Events, two-way binding, and layer types --
                        in-depth guides for common patterns.
                    </p>
                    <a href="docs/guides/events" class="btn btn-sm btn-outline-primary">Browse Guides</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Interactive Demos</h5>
                    <p class="card-text text-muted">
                        17 interactive demos showcasing maps, markers, routing, geocoding,
                        clustering, heatmaps, and more.
                    </p>
                    <a href="demo" class="btn btn-sm btn-outline-primary">Browse Demos</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">REST API Explorer</h5>
                    <p class="card-text text-muted">
                        Interactive API explorer for 16 HERE REST services. Execute live API calls
                        with your own API key.
                    </p>
                    <a href="rest-api" class="btn btn-sm btn-outline-primary">Explore APIs</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-2">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Start</h5>
                    <CodeBlock Language="bash" Code="dotnet add package BlazorHerePlatform" />
                    <CodeBlock Language="csharp" Code="@_programCs" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Simple Map</h5>
                    <CodeBlock Language="xml" Code="@_mapRazor" />
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <h4>Features</h4>
        <div class="row g-3 mt-2">
            <div class="col-sm-6 col-lg-3"><span class="badge bg-primary-subtle text-primary-emphasis p-2">Two-way binding</span></div>
            <div class="col-sm-6 col-lg-3"><span class="badge bg-primary-subtle text-primary-emphasis p-2">Blazor Server & WASM</span></div>
            <div class="col-sm-6 col-lg-3"><span class="badge bg-primary-subtle text-primary-emphasis p-2">.NET 8 / 9 / 10</span></div>
            <div class="col-sm-6 col-lg-3"><span class="badge bg-primary-subtle text-primary-emphasis p-2">Full HERE Maps API</span></div>
        </div>
    </div>
</div>

@code {
    private const string _programCs = """
        builder.Services.AddBlazorHerePlatform(
            new HereApiLoadOptions("YOUR_API_KEY"));
        """;

    private const string _mapRazor = """
        <AdvancedHereMap @bind-Lat="lat" @bind-Lng="lng"
                         @bind-Zoom="zoom"
                         Height="400px">
            <MarkerComponent Lat="52.52" Lng="13.405"
                             Draggable="true" />
        </AdvancedHereMap>
        """;
}
