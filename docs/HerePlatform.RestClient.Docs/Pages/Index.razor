@page "/"
@inject IRestApiDocService DocService

<PageTitle>HerePlatform.RestClient Docs</PageTitle>

<div class="doc-content">
    <h1>HerePlatform.RestClient</h1>
    <p class="lead">
        A .NET REST client for all HERE Platform APIs. Supports Geocoding, Routing, Places, Isoline,
        Matrix Routing, Traffic, Public Transit, Waypoint Sequence, and Geofencing.
    </p>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 mt-3">
        @foreach (var card in _cards)
        {
            <div class="col">
                <a href="@card.Href" class="text-decoration-none">
                    <div class="card h-100 service-card">
                        <div class="card-body">
                            <h5 class="card-title">
                                @card.Title
                                @if (card.ApiVersion is not null)
                                {
                                    <span class="badge bg-info text-dark fw-normal">@card.ApiVersion</span>
                                }
                            </h5>
                            <p class="card-text text-muted">@card.Description</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

@code {
    private record ServiceCard(string Title, string Href, string Description, string? ApiVersion = null);

    private List<ServiceCard> _cards = ServiceDefinitions.All
        .Select(d => new ServiceCard(d.Title, d.Href, d.Description))
        .ToList();

    protected override async Task OnInitializedAsync()
    {
        await DocService.InitializeAsync();
        _cards = ServiceDefinitions.All.Select(d =>
        {
            var svc = DocService.GetService(d.InterfaceName);
            return new ServiceCard(d.Title, d.Href, d.Description, svc?.ApiVersion);
        }).ToList();
    }
}
